@using Resume.Bussines.Extensions
@using Resume.DAL.ViewModels.Skil
@model List<SkilViewModel>

<div class="row">
	<div class="col-12">
		<h2 class="title title--h3">مهارت های من</h2>
		<div class="box box__border">
			<!-- Progress -->
			@if (Model.Any() && Model != null)
			{
				@foreach (var skil in Model)
				{
					<div class="progress">
						<div class="progress-bar" role="progressbar" aria-valuenow="@skil.Percent" aria-valuemin="0" aria-valuemax="100" style="width: 80%; z-index: 2;">
							<div class="progress-text"><span>@skil.Title</span><span>@skil.Percent%</span></div>
						</div>
						<div class="progress-text"><span>@skil.Title</span></div>
					</div>
				}
			}
		</div>
	</div>
</div>