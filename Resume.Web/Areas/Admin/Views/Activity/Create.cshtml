@using Resume.DAL.ViewModels.Activity
@model CreateActivityViewModel

@{
    ViewData["Title"] = "افزودن فعایت من";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    @ViewData["Title"]
                </h2>
            </div>
            <div class="body">
                <form asp-area="Admin" asp-controller="Activity" asp-action="Create" method="post">
                    <div class="row clearfix">
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" asp-for="Title" class="form-control" placeholder="عنوان">
                                    <span asp-validation-for="Title"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" asp-for="Description" class="form-control" placeholder="توضیحات">
                                    <span asp-validation-for="Description"></span>

                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" asp-for="Icon" class="form-control" placeholder="ایکون">
                                    <span asp-validation-for="Icon"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="number" asp-for="ColumnLg" class="form-control" placeholder="عرض ستون آیتم">
                                    <span asp-validation-for="ColumnLg"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <button type="submit" class="btn btn-success btn-lg m-l-15 waves-effect">ثبت</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

