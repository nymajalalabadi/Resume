<!DOCTYPE html>
<html lang="en">

<head>
    <partial name="_MetaTags" />

    <title>ادمین | @ViewData["Title"]</title>

    <partial name="_HeaderReferences" />
    @await RenderSectionAsync("Styles", false)

</head>

<body class="light rtl">

    <!-- Page Loader -->

    <partial name="_Loader" />

    <!-- #END# Page Loader -->

    <!-- Overlay For Sidebars -->
    <div class="overlay"></div>
    <!-- #END# Overlay For Sidebars -->

    <!-- Top Bar -->

    <partial name="_TopNavBar" />

    <!-- #Top Bar -->

    <!-- Left Sidebar -->

    @await Component.InvokeAsync("LeftSideBar")

    <!-- #END# Left Sidebar -->

    <section class="content">

        <div class="container-fluid">

        @RenderBody()

        </div>

    </section>

    <partial name="_FooterReferences" />

    <partial name="_SiteMessages" />

    @await RenderSectionAsync("Scripts", false)
    
</body>
