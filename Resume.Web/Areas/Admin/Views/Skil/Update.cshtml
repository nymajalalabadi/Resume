@using Resume.DAL.ViewModels.Skil
@model EditSkilViewModel

@{
    ViewData["Title"] = "ویرایش مهارت جدید";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    @ViewData["Title"]
                </h2>
            </div>
            <div class="body">
                <form asp-area="Admin" asp-controller="Skil" asp-action="Update" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="row clearfix">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" asp-for="Title" class="form-control">
                                    <span asp-validation-for="Title"></span>
                                    <label asp-for="Title" class="form-label"></label>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" asp-for="Percent" class="form-control">
                                    <span asp-validation-for="Percent"></span>
                                    <label asp-for="Percent" class="form-label"></label>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <button type="submit" class="btn btn-warning btn-lg m-l-15 waves-effect">ویرایش</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

